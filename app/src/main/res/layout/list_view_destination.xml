<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="5sp"
    android:background="#5D4D8C"
    app:cardBackgroundColor="#FAF5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="15sp">

        <TextView
            android:id="@+id/title_list_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Type - Name"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#181818" />

        <TextView
            android:id="@+id/title_date_destination"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textColor="#181818"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/title_list_destination"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/value_date_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:text="09/10/2022"
            android:textColor="#181818"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/title_date_destination"
            app:layout_constraintTop_toBottomOf="@+id/title_list_destination" />

        <TextView
            android:id="@+id/title_place_destination"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Place: "
            android:textColor="#181818"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/value_date_destination"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/value_place_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="0dp"
            android:text="Enter place"
            android:textColor="#181818"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/title_place_destination"
            app:layout_constraintTop_toBottomOf="@+id/value_date_destination" />

        <TextView
            android:id="@+id/title_price_destination"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textColor="#181818"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/value_place_destination"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/value_price_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="0dp"
            android:text="$ 220"
            android:textColor="#181818"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/title_price_destination"
            app:layout_constraintTop_toBottomOf="@+id/value_place_destination" />

        <TextView
            android:id="@+id/title_description_destination"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="#181818"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/value_price_destination"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/value_description_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="0dp"
            android:text="$ 220"
            android:textColor="#181818"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/title_description_destination"
            app:layout_constraintTop_toBottomOf="@+id/value_price_destination" />


        <Button
            android:id="@+id/btn_update_destination"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:backgroundTint="#A77979"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:paddingLeft="8dp"
            android:layout_marginEnd="18dp"
            android:paddingRight="8dp"
            android:text="UPDATE"
            android:textColorHint="#181818"
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete_destination"
            app:layout_constraintTop_toBottomOf="@+id/value_description_destination" />

        <Button
            android:id="@+id/btn_delete_destination"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#A77979"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Delete"
            android:textColorHint="#181818"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/value_description_destination" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>